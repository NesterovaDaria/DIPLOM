<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebPortalLanguages</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <script>
        function btnEntr() {
            alert("btn click");
            //$.get("/Home/Enter");
            
        }
    </script>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebPortalLanguages</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="MenuContainer" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!--
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </li>
         -->
                        <li class="nav-item">
                            <a class="nav-link px-2 link-secondary" asp-controller="Languages"
                               asp-action="Teor">Теоретический материал</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-2 link-secondary" asp-controller="Languages"
                               asp-action="Dictionary">Словарь</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link px-2 link-secondary">Форум</a>
                        </li>
                    </ul>
                    @if (Program.user == null)
                    {
                        <div class="col-md-3 text-end">
                            <a role="button" id="btnEnter" href="../Home/Enter" class="btn btn-outline-primary me-2">Войти</a>
                            <a role="button" id="btnReg" href="../Home/Register" class="btn btn-primary" style="color: white">Регистрация</a>
                        </div>
                    }
                    else 
                    { 
                        <div class="dropdown text-end">
                            <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle show"
                               data-bs-toggle="dropdown" aria-expanded="true">
                                <img src="" alt="mdo" width="32" height="32" class="rounded-circle">
                            </a>
                            <ul class="dropdown-menu text-small show" data-popper-placement="top-start"
                                style="position: absolute; inset: auto auto 0px 0px; margin: 0px; transform: translate3d(0px, -34px, 0px);">
                                <li>
                                    <a class="dropdown-item" href="#">Мой профиль</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Редактировать профиль</a>
                                </li>
                                <li>
                                    <hr class="dropdown-item">
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Выход</a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebPortalLanguages - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
